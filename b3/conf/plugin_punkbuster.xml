<configuration plugin="punkbuster">
	<settings name="commands">
		<set name="pbss">20</set>
		<set name="pbbuildbans">80</set>
	</settings>
	<settings name="settings">
		<!-- 
		Path to pbbans.dat file can be a local path or a ftp address if your game 
		server is in a remote location. To use an ftp directory, use this syntax: 
		<set name="bans_file">ftp://username:password@host/path/to/pbbans.dat</set>
		-->
		<set name="bans_file">~/cod/pb/pbbans.dat</set>
		<!-- crontab like time settings for when to rebuild bans file, 0 for never -->
		<set name="rebuild_bans">0 0 * * *</set>
	</settings>
</configuration>